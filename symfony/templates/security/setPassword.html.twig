
{% extends "config/layoutConfig.html.twig" %}

{% block title %}

{% endblock %}

{% block head %}


{% endblock %}

{% block body %}



    <div id="submenu">
        <a abc="/" class="selected" href="/">Services</a>

        |

        <a abc="/en/front/discussion/serviceSubscription" class="selected" href="/en/front/discussion/serviceSubscription">Discussion</a>

        |

        <a abc="/en/front/customer" href="/en/front/customer">Customer Support</a>


    </div>
    <br/>
    <br/>
    <h1>Set your password</h1>
    <br/>
    <br/>

    <div class="blocLeft">


    {{ form_start(form, {'attr': {'id': 'form'},'action': path('setpassword', {token: token}) }) }}

    {{ form_errors(form) }}

    <table>
        <tr>
            <td>{{ form_label(form.password.first, 'Password') }}</td>
            <td>{{ form_widget(form.password.first) }}</td>
            <td>{{ form_errors(form.password.first) }}</td>
        </tr>
        <tr>
            <td>{{ form_label(form.password.second, 'Repeat password') }}</td>
            <td>{{ form_widget(form.password.second) }}</td>
            <td>{{ form_errors(form.password.second) }}</td>
        </tr>
    </table>

    {{ form_rest(form) }}

    <br/>

    <input type="submit" value="{{ 'Set'|trans }}" />
    {{ form_end(form) }}

    <br/><br/>

    </div>


{% endblock %}