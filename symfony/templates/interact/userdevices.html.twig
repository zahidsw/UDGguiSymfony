{% extends "interact/layoutInteract.html.twig" %}
 
{% block title %}
	{{ parent() }} - {{ 'subMenu.interact.devicesProfile'|trans }}
{% endblock %}

{% block head %}
	{{ parent() }}
{% endblock %}

{% block body %}
	{{ parent() }}
	
	<h1>{{ 'subMenu.interact.devicesProfile'|trans }}</h1>
	
	<br/>
<br/>
<br/>
<div id="zebraTableDiv">
    <table id="table" style="width:100%;">
        <tr>
            <th>{{ 'Name' }}</th>
            <th>{{ 'Physical code' }}</th>
            <th>{{ 'Description' }}</th>
        </tr>

        {% for device in devices %}
            <tr>
                <td>{{ device.assignedName }}</td>
                <td>{{ device.physicalCode }}</td>
                <td>{{ device.description }}</td>
            </tr>
        {% endfor %}
    </table>
</div>
	
	
{% endblock %}