{% extends "config/layoutConfig.html.twig" %}

{% block title %}
    add value
{% endblock %}

{% block head %}

{% endblock %}

{% block body %}
    <div id="submenu">
        <a abc="/" class="selected" href="/">Services</a>

        |

        <a abc="/en/front/discussion/serviceSubscription" class="selected"
           href="/en/front/discussion/serviceSubscription">Discussion</a>

        |

        <a abc="/en/front/customer" href="/en/front/customer">Customer Support</a>


    </div>
    <br/>
    <br/>
    <br/>
    <br/>


    <div class="leftColumn">

        <div class="blocLeft">
            <img class="legend" alt="{{ 'msg.interact'|trans }}" src="{{ asset('/assets/images/front/virtual.png') }}"/>
            <a href="http://udg.cityreport.org" class="title indent"><strong> {{ 'IoT Virtual Network'|trans }}</strong></a>

        </div>

        <div class="blocLeft">

            {{ form_start(form, {'attr': {'id': 'form'},'action': path('slicecreateflavour') }) }}
            {{ form_errors(form) }}
            <table>
                <tr>
                    {% if form.vars.help ?? false %}
                        <div class="form--help">{{ form.vars.help }}</div>
                    {% endif %}
                    <td>{{ form_label(form.name, 'conf.name'|trans) }}</td>
                    <td>{{ form_widget(form.name) }}</td>
                    <td>{{ form_errors(form.name) }}</td>
                </tr>
            </table>

            {{ form_rest(form) }}
            <br/>

            <input type="submit" value="{{ 'Add'|trans }}"/>

            {% if backId == 'ericsson' %}
                <a href="{{ path('ericsson_slice_new') }}" class="btn btn-link">
                    <i class="fa fa-list-alt" aria-hidden="true"></i>
                    <input type="button" value="{{ 'Back to slice Form'|trans }}"/>
                </a>
            {% else %}
                <a href="{{ path('slice_new') }}" class="btn btn-link">
                    <i class="fa fa-list-alt" aria-hidden="true"></i>
                    <input type="button" value="{{ 'Back to slice Form'|trans }}"/>
                </a>
            {% endif %}


            {{ form_end(form) }}

        </div>


    </div>

    <div class="blocRight">

        {# read and display just one flash message type #}
        {% for message in app.flashes('notice') %}
            <div class="flash-notice">
			{{ message }}
		</div>
        {% endfor %}
    </div>




{% endblock %}