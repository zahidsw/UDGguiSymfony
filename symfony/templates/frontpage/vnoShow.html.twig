{% extends "config/layoutConfig.html.twig" %}

{% block title %}
    add value
{% endblock %}

{% block head %}


{% endblock %}

{% block body %}


    <div id="submenu">
        <a abc="/" class="selected" href="/">Services</a>

        |

        <a abc="/en/front/discussion/serviceSubscription" class="selected"
           href="/en/front/discussion/serviceSubscription">Discussion</a>

        |

        <a abc="/en/front/customer" href="/en/front/customer">Customer Support</a>


    </div>
    <br/>
    <br/>
    <br/>
    <br/>


    <div class="leftColumn">

        <div class="blocLeft">
            <img class="legend" alt="{{ 'msg.interact'|trans }}" src="{{ asset('/assets/images/front/virtual.png') }}"/>
            <a href="http://udg.cityreport.org" class="title indent"><strong> {{ 'IoT Virtual Network'|trans }}</strong></a>
        </div>

        <div class="blocLeft">

             <h1><b>{{ 'Pop Show'|trans }}</b></h1>
            <table class="table table-striped table-middle-aligned">

                <tbody>
                <tr>
                    <td>{{ pop.name }}</td>
                </tr>
                <tr>
                    <td>{{ pop.auth }}</td></tr>
                    <tr><td>{{ pop.tenant }}</td></tr>
                    <tr><td>{{ pop.username }}</td></tr>
                    <tr><td>{{ pop.type }}</td></tr>
                    <tr><td>{{ pop.keypair }}</td></tr>
                    {# it's not mandatory to set the timezone in localizeddate(). This is done to
                      avoid errors when the 'intl' PHP extension is not available and the application
                      is forced to use the limited "intl polyfill", which only supports UTC and GMT #}

                    <td class="text-right">
                        <div class="item-actions">

                            <a href="{{ path('pop_list', {id: pop.id}) }}" class="btn btn-sm btn-primary">
                                <i class="fa fa-edit" aria-hidden="true"></i>
                                <input type="button" value="{{ 'Back Pop List'|trans }}"/>
                            </a>

                        </div>
                    </td>
                </tr>
                </tbody>
            </table>
            <br/>
        </div>


    </div>

    <div class="blocRight">


        {# read and display just one flash message type #}
        {% for message in app.flashes('notice') %}
            <div class="flash-notice">
                {{ message }}
            </div>
        {% endfor %}
    </div>




{% endblock %}