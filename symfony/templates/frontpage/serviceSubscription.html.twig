{% extends 'frontpage/layout.html.twig' %}

{% block title %}Frontpage{% endblock %}

{% block body %}
<div id="submenu">
<a abc="/" class="selected" href="/">Services</a>

		 | 
	<a abc="/en/front/discussion/serviceSubscription" class="selected" href="/en/front/discussion/serviceSubscription">Discussion</a>
	
		 | 
		
	<a abc="/en/front/customer" href="/en/front/customer">Customer Support</a>
</div>

<h1>Discussion</h1>
	<br/>
    <a href="/en/front/discussion/serviceSubscription" class="subtitle2">[Contact Us for Service Subscription]</a>
    <a href="/en/front/discussion/contact" class="subtitle2">[Company and contact information]</a>
    <a href="/en/front/discussion/service" class="subtitle2">[Interesting services]</a>
	<br/>
    <br/>
    <br/>	

	<h1>Contact Us for Service Subscription</h1>


             <br/>
	
	{% for flashMessage in app.session.flashbag.get('ko') %}
    	<div class="messageKo">{{ flashMessage }}</div>
    	<br/>
	{% endfor %}
	
	{% for flashMessage in app.session.flashbag.get('ok') %}
	    <div class="messageOk">{{ flashMessage }}</div>
	    <br/>
	{% endfor %}
	
	{{ form_start(form, {'attr': {'id': 'form'},'action': path('iot6_AboutBundle_Contact') }) }}
		{{ form_errors(form) }}
		<table>
			<tr>
				<td style="width:150px;">{{ form_label(form.name, 'Name'|trans) }}</td>
				<td>{{ form_widget(form.name) }}</td>
				<td>{{ form_errors(form.name) }}</td>
			</tr>
			<tr>
				<td>{{ form_label(form.email, 'Email'|trans) }}</td>
				<td>{{ form_widget(form.email) }}</td>
				<td>{{ form_errors(form.email) }}</td>
			</tr>
			<tr>
				<td>{{ form_label(form.message, 'Message'|trans) }}</td>
				<td>{{ form_widget(form.message) }}</td>
				<td>{{ form_errors(form.message) }}</td>
			</tr>
		</table>	
		
		{{ form_rest(form) }}
		
		<br/>
		
		<input type="submit" value={{ 'Send'|trans }} class="centerButton" />
	{{ form_end(form) }}








    
{% endblock %}
