{% extends "config/layoutConfig.html.twig" %}
 
{% block title %}
	
{% endblock %}

{% block head %}
	{{ parent() }}
{% endblock %}

{% block body %}
	<div id="submenu">
		<a abc="/" class="selected" href="/">Services</a>

		 | 
	
	<a abc="/en/front/discussion" class="selected" href="/en/front/discussion">Discussion</a>
	
		 | 
		
	<a abc="/en/front/customer" href="/en/front/customer">Customer Support</a>
		

</div>
	
	<h1>{{ ''|trans }}</h1>
	
	<br/><br/>


	
	{{ form_start(form, {'attr': {'id': 'form'},'action': path('vnocreate') }) }}
		{{ form_errors(form) }}
		<table>
			<tr>
				<td>{{ form_label(form.name, 'conf.name'|trans) }}</td>
				<td>{{ form_widget(form.name) }}</td>
				<td>{{ form_errors(form.name) }}</td>
			</tr>
			<tr>
				<td>{{ form_label(form.AuthorisationURL, 'AuthorisationURL') }}</td>
				<td>{{ form_widget(form.AuthorisationURL) }}</td>
				<td>{{ form_errors(form.AuthorisationURL) }}</td>
			</tr>
			<tr>
				<td>{{ form_label(form.Tenant, 'Tenant') }}</td>
				<td>{{ form_widget(form.Tenant) }}</td>
				<td>{{ form_errors(form.Tenant) }}</td>
			</tr>
			<tr>
				<td>{{ form_label(form.Username, 'Username') }}</td>
				<td>{{ form_widget(form.Username) }}</td>
				<td>{{ form_errors(form.Username) }}</td>
			</tr>
			<tr>
				<td>{{ form_label(form.Password, 'Password') }}</td>
				<td>{{ form_widget(form.Password) }}</td>
				<td>{{ form_errors(form.Password) }}</td>
			</tr>
			<tr>
				<td>{{ form_label(form.Type, 'Type') }}</td>
				<td>{{ form_widget(form.Type) }}</td>
				<td>{{ form_errors(form.Type) }}</td>
			</tr>
			<tr>
				<td>{{ form_label(form.KeyPair, 'KeyPair') }}</td>
				<td>{{ form_widget(form.KeyPair) }}</td>
				<td>{{ form_errors(form.KeyPair) }}</td>
			</tr>
			<tr>
				<td>{{ form_label(form.SecurityGroups, 'SecurityGroups') }}</td>
				<td>{{ form_widget(form.SecurityGroups) }}</td>
				<td>{{ form_errors(form.SecurityGroups) }}</td>
			</tr>
		
		</table>	
		
		{{ form_rest(form) }}
		
		<br/>
		
		<input type="submit" value="{{ 'conf.add'|trans }}" />&nbsp;<input type="button" value="{{ 'conf.cancel'|trans }}"  />
	{{ form_end(form) }}
	
	{# read and display just one flash message type #}
	{% for message in app.flashes('notice') %}
		<div class="flash-notice">
			{{ message }}
		</div>
	{% endfor %}

	
{% endblock %}