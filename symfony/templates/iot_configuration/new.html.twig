{% endblock %}

{% block body %}
    <div id="submenu">
        <a abc="/" class="selected" href="/">Services</a>
        |
        <a abc="/en/front/discussion/serviceSubscription" class="selected"
           href="/en/front/discussion/serviceSubscription">Discussion</a>
        |
        <a abc="/en/front/customer" href="/en/front/customer">Customer Support</a>
    </div>
    <br/>
    <br/>
    <br/>
    <br/>
    <script language="javascript">
        $(document).ready(function () {
            $('#div_humidity').hide();

            //------ ajax function called based on check box selected -------
            function ajaxCall($argument) {
                //  alert($argument);
                $.ajax({
                    url: "/iotconfig/ajax",
                    type: 'POST',
                    data: {template_id: $argument},
                    dataType: 'json',
                    async: true,
                    success: function (data, status) {
                        //  $("#form").hide();
                        //  alert("sadfsdd"+ data.username);
                        //   $("#form").show();
                        // $(#form).hidde();
                        //data.username;
                        // $("#pop_securitygroup option:selected").remove();
                    },
                    error: function (xhr, textStatus, errorThrown) {
                        //  alert("fail");
                        return false;
                        // console.log('request failed');
                    }
                });
            }

            //------- end ---------------------

            $("input[name='ingredients[]']").change(function () {
                if ($('#temp').is(":checked")) {
                    //var returnVal = confirm("Are you sure?");
                    // alert($(this).attr("id"));
                    //$(this).prop("checked", returnVal);
                    // ajaxCall($(this).attr("id"));
                    $('#form').show();
                    $('#div_humidity').hide();

                    //alert("fff"+data);
                }
                else if ($('#humidity').is(":checked")) {
                    //$('#textbox1').val(this.checked);
                    $('#form').hide();
                    $('#div_humidity').show();

                } else {
                    $('#div_humidity').show();
                }

            });
            var input;
            $("tbody p").each(function () {
                var inputId = $(this).attr("id");
                document.getElementById(inputId).style.display = 'none';
            });
        })
    </script>
    <div class="blocLeft">
        <img class="legend" alt="{{ 'msg.interact'|trans }}" src="{{ asset('/assets/images/front/virtual.png') }}"/>
        <a href="http://udg.cityreport.org" class="title indent"><strong> {{ 'IoT Virtual Network'|trans }}</strong></a>
    </div>
    <div class="leftColumn">
        <div class="blocLeft">
            <input id="temp" type="radio" name="ingredients[]" displayvalue="Temperature Monitoring"/>
            <label for="temp">Temperature Monitoring</label><br>
            <input id="humidity" type="radio" name="ingredients[]" value="Humidity"/>
            <label for="humidity">Humidity</label><br>
            <input id="traffic" type="radio" name="ingredients[]" value="Traffic"/>
            <label for="traffic">Traffic</label>
            <br/>
        </div>

        <div class="blocLeft">
            {{ form_start(form, {'attr': {'id': 'form', 'hidden':true },'action': path('configuration_new')}) }}
            {{ form_errors(form) }}
            {{ include('iot_configuration/_form.html.twig') }}
            {{ form_rest(form) }}
            <br/>
            <input type="submit" value="{{ 'Add'|trans }}"/>

            <a href="{{ path('iot_configuration') }}" class="btn btn-sm btn-default">
                <i class="fa fa-eye" aria-hidden="true"></i>
                <input type="button" value="{{ 'Cancel'|trans }}"/>
            </a>
            {{ form_end(form) }}
            <div id="div_humidity" class="blocLeft">
                <p><span><h1>This section is still under construction</h1></span></p>
            </div>

        </div>
    </div>
    <div class="blocRight">
        {# read and display just one flash message type #}
        {% for message in app.flashes('notice') %}
            <div class="flash-notice">
                {{ message }}
            </div>
        {% endfor %}
    </div>




{% endblock %}