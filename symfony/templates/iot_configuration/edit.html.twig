            <br/>
            <input type="submit" value="{{ 'Updated'|trans }}"/>
            <a href="{{ path('slice_list') }}" class="btn btn-sm btn-default">
                <i class="fa fa-eye" aria-hidden="true"></i>
                <input type="button" value="{{ 'Cancel'|trans }}"/>
            </a>

            {{ form_end(form) }}
        </div>
    </div>

    <div class="blocRight">


