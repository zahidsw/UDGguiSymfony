                    var inputId = $(this).attr("id");
                    document.getElementById(inputId).style.display = 'none';
                });
            })
        </script>
        <div class="blocLeft">
            {{ form_start(form, {attr: attr|default({})}) }}
            {{ form_errors(form) }}
            {{ include('iot_configuration/_form.html.twig') }}
