                    //  alert($argument);
                    $.ajax({
                        url: "/iotconfig/ajax",
                        type: 'POST',
                        data: {template_id: $argument},
                        dataType: 'json',
                        async: true,
                        success: function (data, status) {
                            //  $("#form").hide();
                            //  alert("sadfsdd"+ data.username);
                            //   $("#form").show();
